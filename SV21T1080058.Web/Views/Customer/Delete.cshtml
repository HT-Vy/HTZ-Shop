@model Customer
@{
    ViewBag.Title = "Xóa Khách hàng";
}

<div class="box box-danger">
    <div class="box-body">
        <form action="~/Customer/Delete/@Model.CustomerID" method="post">
            
            <div class="form-group">
                <label class="control-label col-sm-2">Tên khách hàng: </label>
                <p class="form-control-static">@Model.CustomerName</p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên giao dịch: </label>
                <p class="form-control-static">@Model.ContactName</p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại: </label>
                <p class="form-control-static">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email: </label>
                <p class="form-control-static">@Model.Email</p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ: </label>
                <p class="form-control-static">@Model.Address</p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tỉnh/Thành: </label>
                <p class="form-control-static">@Model.Province</p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Trạng thái: </label>
                <p class="form-control-static">@(Model.IsLocked ? "Khách hàng bị khóa" : "Khách hàng không bị khóa")</p>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (ViewBag.AllowDelete)
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                            Xóa dữ liệu
                        </button>
                    }
                    else
                    {
                        <span style="color:red">Không được xóa khách hàng này!</span>
                    }

                    <a href="~/Customer" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>
