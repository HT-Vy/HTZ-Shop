@model Supplier
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post" enctype="multipart/form-data">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />
            <div class="form-group">
                <label>Tên nhà cung cấp: </label>
                <input type="text" name="@nameof(Model.SupplierName)" value="@Model.SupplierName" class="form-control" autofocus>
                <span style="color:red">@Html.ValidationMessage(nameof(Model.SupplierName)) </span>
            </div>
            <div class="form-group">
                <label>Tên giao dịch: </label>
                <input type="text" name="@nameof(Model.ContactName)" value="@Model.ContactName" class="form-control">
                <span style="color:red">@Html.ValidationMessage(nameof(Model.ContactName))</span>

            </div>
            <div class="form-group">
                <label>Điện thoại: </label>
                <input type="text" name="@nameof(Model.Phone)" value="@Model.Phone" class="form-control">
            </div>
            <div class="form-group">
                <label>Email: </label>
                <input type="text" name="@nameof(Model.Email)" value="@Model.Email" class="form-control">
            </div>
            <div class="form-group">
                <label>Địa chỉ: </label>
                <input type="text" name="@nameof(Model.Address)" value="@Model.Address" class="form-control">
            </div>
            <div class="form-group">
                <label>Tỉnh/Thành: </label>
                <select class="form-control select2" name="@nameof(Model.Province)">
                    <option value="">--Chọn Tỉnh/Thành--</option>
                    @foreach (var province in CommonDataService.ListOfProvinces())
                    {
                        if (province.ProvinceName == Model.Province)
                        {
                            <option value="@province.ProvinceName" selected>@province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                    }
                </select>
                <span style="color:red">@Html.ValidationMessageFor(m => m.Province)</span>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh logo:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="@nameof(Model.Logo)" value="@Model.Logo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/suppliers/@Model.Logo" class="img img-bordered" style="width:200px" alt="NoPhoto" />
                </div>
            </div>
            
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>
    </div>
</div>
