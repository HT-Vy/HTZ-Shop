@model Category
@{
    ViewBag.Title = "Xóa Loại hàng";
}

<div class="box box-danger">
    <div class="box-body">
        <form action="~/Category/Delete/@Model.CategoryID" method="post">

            <div class="form-group">
                <label class="control-label col-sm-2">Tên loại hàng: </label>
                <p class="form-control-static">@Model.CategoryName</p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả: </label>
                <p class="form-control-static">@Model.Description</p>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (ViewBag.AllowDelete)
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                            Xóa dữ liệu
                        </button>
                    }
                    else
                    {
                        <span style="color:red">Không được xóa loại hàng này!</span>
                    }

                    <a href="~/Category" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>
