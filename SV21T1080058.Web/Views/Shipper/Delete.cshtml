@model Shipper
@{
    ViewBag.Title = "Xóa Người giao hàng";
}

<div class="box box-danger">
    <div class="box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên người giao hàng: </label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại: </label>
                <p class="form-control-static">@Model.Phone</p>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (ViewBag.AllowDelete)
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                            Xóa dữ liệu
                        </button>
                    }
                    else
                    {
                        <span style="color:red">Không được xóa Người giao hàng này!</span>
                    }

                    <a href="~/Shipper" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>
